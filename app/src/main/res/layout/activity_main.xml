<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/baselogin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensansbold"
        android:text="Iniciar sesión"
        android:textColor="#FFFF"
        android:textSize="29sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.042" />
    <EditText
        android:id="@+id/txtemail"
        android:layout_width="323dp"
        android:layout_height="44dp"
        android:background="@drawable/fondotextbox_login"
        android:ems="10"
        android:hint="Email"
        android:textSize="17sp"
        android:textColorHint="#FFFF"
        android:textColor="#FFFF"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.053" />

    <EditText
        android:id="@+id/txtcontrasenia"
        android:layout_width="323dp"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/fondotextbox_login"
        android:ems="10"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:textColor="#FFFF"
        android:textColorHint="#FFFF"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/txtemail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtemail"
        app:layout_constraintTop_toBottomOf="@+id/txtemail" />

    <Button
        android:id="@+id/botoniniciarsesion"
        android:layout_width="163dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/fondoboton_login"
        android:text="Iniciar sesión"
        app:layout_constraintEnd_toEndOf="@+id/txtcontrasenia"
        app:layout_constraintStart_toStartOf="@+id/txtcontrasenia"
        app:layout_constraintTop_toBottomOf="@+id/txtcontrasenia" />

    <TextView
        android:id="@+id/txtolvidastepassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Olvidaste tu contraseña?"
        android:textSize="14sp"
        android:textColor="#FFFF"
        app:layout_constraintEnd_toEndOf="@+id/botoniniciarsesion"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/botoniniciarsesion"
        app:layout_constraintTop_toBottomOf="@+id/botoniniciarsesion" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.827">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensansregular"
            android:text="O"
            android:textColor="#000000"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/txtregistrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/opensansbold"
            android:text=" registrate"
            android:textColor="#FF3F61"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/opensansregular"
            android:text=" si aun no lo estas"
            android:textColor="#000000"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.972">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:srcCompat="@drawable/quetzalcoatlsssss" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|center"
            android:fontFamily="@font/opensansbold"
            android:paddingTop="15dp"
            android:text="Kután"
            android:textColor="#000000"
            android:textSize="24sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>